<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovopc.jagrati.AddStudent">

    <include layout="@layout/popup_header"
        android:id="@+id/include2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/uploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_home_user"
                android:src="@drawable/student_dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/vilage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Village Name"
                android:inputType="textPersonName"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/classNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Class"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Roll No."
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/motherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Mother's Name"
                android:inputType="textPersonName"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/fatherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Father's Name"
                android:inputType="textPersonName"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Contact Number"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/emergencyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Emergency Number"
                android:inputType="number"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPersonName"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/birthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Date of Birth"
                android:inputType="date"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:textColor="#4a4a4a"
                android:textColorHint="#9b9b9b"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_notificationpage2"
                android:text="Save"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
