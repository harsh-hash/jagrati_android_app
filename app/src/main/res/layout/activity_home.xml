<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.lenovopc.jagrati.Home">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageButton
                    android:id="@+id/notification"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_home_notification" />

                <ImageButton
                    android:id="@+id/user"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_home_user" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="146dp"
                android:background="@drawable/ic_home_button_boxes"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            app:srcCompat="@drawable/ic_home_class" />

                        <Button
                            android:id="@+id/_class"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:background="@android:color/transparent"
                            android:gravity="top|center_horizontal"
                            android:paddingTop="85dp"
                            android:text="Class"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="32dp"
                            app:srcCompat="@drawable/ic_home_study_material" />

                        <Button
                            android:id="@+id/studyMaterial"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:background="@android:color/transparent"
                            android:gravity="top|center_horizontal"
                            android:paddingTop="85dp"
                            android:text="Study Material"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="32dp"
                            app:srcCompat="@drawable/ic_home_events" />

                        <Button
                            android:id="@+id/events"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:background="@android:color/transparent"
                            android:gravity="top|center_horizontal"
                            android:paddingTop="85dp"
                            android:text="Events"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="35dp"
                            app:srcCompat="@drawable/ic_home_teaching_department" />

                        <Button
                            android:id="@+id/teachingDepartment"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:background="@android:color/transparent"
                            android:gravity="top|center_horizontal"
                            android:paddingTop="85dp"
                            android:text="Teaching Department"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center_horizontal"
                android:text="Initiative by"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="IIITDM Jabalpur"
                android:textColor="#9b9b9b"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
