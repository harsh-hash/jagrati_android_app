<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.lenovopc.jagrati.AddEvent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_teachingdepartment_backbutton" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="Event"
                android:textColor="#4a4a4a"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--TODO: Loop Here For Event-->

                <RelativeLayout
                    android:id="@+id/event"
                    android:layout_width="match_parent"
                    android:layout_height="282dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_outline"
                    android:elevation="10dp">

                    <ImageView
                        android:id="@+id/eventImage"
                        android:layout_width="match_parent"
                        android:layout_height="216dp"
                        android:background="@android:color/holo_green_light" />

                    <Button
                        android:id="@+id/eventPanel"
                        android:layout_width="match_parent"
                        android:layout_height="282dp"
                        android:background="@android:color/transparent"
                        android:gravity="bottom"
                        android:paddingBottom="36dp"
                        android:paddingLeft="16dp"
                        android:text="Event : Drawing Competition"
                        android:textAlignment="textStart"
                        android:textColor="#4a4a4a"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/dateTimeEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="16dp"
                        android:text="15 Aug 2017, 6:00 PM"
                        android:textColor="#797979" />

                    <ImageButton
                        android:id="@+id/options"
                        android:layout_width="43dp"
                        android:layout_height="66dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_options_button" />

                </RelativeLayout>

                <!--TODO: Loop Here for Announcement-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp">

                    <TextView
                        android:id="@+id/dateTimeAnnouncement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/button3"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="16dp"
                        android:elevation="12dp"
                        android:text="15 Aug 2017, 6:00 PM"
                        android:textColor="#797979" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:background="@drawable/button_outline"
                        android:elevation="10dp"
                        android:gravity="start"
                        android:paddingEnd="32dp"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:text="Announcement : Meeting regarding how to make awareness about study"
                        android:textColor="#4a4a4a" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="6dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_outline"
                        android:elevation="10dp"
                        android:text="Edit"
                        android:textColor="#4a4a4a" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <ImageButton
            android:id="@+id/addEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_addbutton_white"
            android:src="@drawable/ic_addbutton" />

    </RelativeLayout>


</FrameLayout>