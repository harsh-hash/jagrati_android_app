<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovopc.jagrati.VolunteerManagement"
    android:background="#ffffff">

    <include layout="@layout/nav_header"
        android:id="@+id/include3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include3"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="#d8d8d8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/volunteerAttendance"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/field_line"
                android:gravity="center_vertical|start"
                android:paddingLeft="20dp"
                android:text="Volunteer Attendance"
                android:textColor="#4a4a4a" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/volunteerRequest"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/field_line"
                android:gravity="center_vertical|start"
                android:paddingLeft="20dp"
                android:text="Volunteer Request"
                android:textColor="#4a4a4a" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/volunteerList"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/field_line"
                android:gravity="center_vertical|start"
                android:paddingLeft="20dp"
                android:text="Volunteer List"
                android:textColor="#4a4a4a" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_right_arrow" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
