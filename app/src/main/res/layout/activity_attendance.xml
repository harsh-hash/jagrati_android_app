<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    tools:context="com.example.lenovopc.jagrati.Attendance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/cancel"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Attendance"
                android:textColor="#4a4a4a"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/attend_cross" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberActiveStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#4a4a4a" />

            <TextView
                android:id="@+id/activeStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Active Students"
                android:textColor="#9b9b9b" />

            <TextView
                android:id="@+id/numberPresentStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="2"
                android:textColor="#4a4a4a" />

            <TextView
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Present"
                android:textColor="#9b9b9b" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="30dp">

            <GridLayout
                android:id="@+id/subjectGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="false"
                android:columnCount="2"
                android:rowOrderPreserved="false">

                <RelativeLayout
                    android:layout_width="206dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageStudent"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/student_dp" />

                    <TextView
                        android:id="@+id/nameStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/imageStudent"
                        android:layout_below="@+id/imageStudent"
                        android:layout_marginTop="13dp"
                        android:text="Gaurav Mishra"
                        android:textColor="#343434" />

                    <TextView
                        android:id="@+id/villageName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/nameStudent"
                        android:layout_below="@+id/nameStudent"
                        android:layout_marginTop="5dp"
                        android:text="Mehgawan"
                        android:textColor="#858585"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageStudent"
                        android:layout_alignEnd="@+id/imageStudent"
                        android:button="@drawable/checkbox_selector"/>
                </RelativeLayout>

            </GridLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/submitAttendance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:background="#f17e01"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>
