<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    tools:context="com.example.lenovopc.jagrati.Attendance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/popup_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberActiveStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#4a4a4a" />

            <TextView
                android:id="@+id/activeStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Active Students"
                android:textColor="#9b9b9b" />

            <TextView
                android:id="@+id/numberPresentStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="2"
                android:textColor="#4a4a4a" />

            <TextView
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Present"
                android:textColor="#9b9b9b" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="14dp">

            <GridLayout
                android:id="@+id/subjectGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="false"
                android:columnCount="2"
                android:rowOrderPreserved="false">

                <RelativeLayout
                    android:layout_width="206dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="16dp"
                    android:paddingStart="20dp">

                    <TextView
                        android:id="@+id/nameStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/checkBox"
                        android:layout_marginTop="15dp"
                        android:text="Gaurav Mishra"
                        android:textColor="#343434" />

                    <TextView
                        android:id="@+id/villageName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/nameStudent"
                        android:layout_below="@+id/nameStudent"
                        android:layout_marginTop="5dp"
                        android:text="Mehgawan"
                        android:textColor="#858585"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_selector" />
                </RelativeLayout>

            </GridLayout>

        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/submitAttendance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:background="#f17e01"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>
