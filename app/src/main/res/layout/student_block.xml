<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="206dp"
    android:layout_height="155dp"
    android:layout_marginTop="16dp"
    android:paddingStart="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/attendance"
        android:layout_marginTop="15dp"
        android:text="Gaurav Mishra"
        android:textColor="#343434" />

    <TextView
        android:id="@+id/villageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentName"
        android:layout_below="@+id/studentName"
        android:layout_marginTop="5dp"
        android:text="Mehgawan"
        android:textColor="#858585"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:background="@drawable/ic_home_user"/>
</RelativeLayout>