<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.lenovopc.jagrati.ClassFeedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/cancel"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Class Feedback"
                android:textColor="#4a4a4a"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/attend_cross" />
        </RelativeLayout>

        <EditText
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/field_line"
            android:ems="10"
            android:hint="HINDI"
            android:inputType="text|number"
            android:textColor="#4a4a4a"
            android:textColorHint="#4a4a4a"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/otherFeedback"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/field_line"
            android:ems="10"
            android:hint="Chapter 1 : Lorem ipsum dolor sit amet."
            android:inputType="textMultiLine|textShortMessage"
            android:textColor="#4a4a4a"
            android:textColorHint="#4a4a4a"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/submitStudentFeedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:background="#f17e01"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</RelativeLayout>
