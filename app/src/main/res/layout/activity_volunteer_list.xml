<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovopc.jagrati.VolunteerList"
    android:background="#ffffff">

    <include layout="@layout/nav_header"
        android:id="@+id/include4" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include4"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/uploadimage_button"
        android:id="@+id/searchView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchView"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--TODO: get profile_subject_button here for each volunteer-->
            <!--TODO: Delete dummy relative layout-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <Button
                    android:id="@+id/volunteerName"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:paddingLeft="80dp"
                    android:paddingTop="13.7dp"
                    android:text="Garima Mishra"
                    android:textAllCaps="false"
                    android:textColor="#343434"
                    android:textSize="16.2dp" />

                <TextView
                    android:id="@+id/volunteerDiscipline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="39.3dp"
                    android:text="Design Discipline"
                    android:textColor="#858585"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/displayPicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_home_user"/>

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/student_dp_frame" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>