<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.lenovopc.jagrati.StudentFeedback">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/pageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/cancel"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Student Feedback"
                    android:textColor="#4a4a4a"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/cancel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:src="@drawable/attend_cross" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="STUDENT :"
                    android:textColor="#9b9b9b"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/studentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:text="Kiran Bhattacharya"
                    android:textColor="#4a4a4a"
                    android:textSize="18dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/examPerformance"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="EXAM PERFORMANCE"
                android:inputType="text|number"
                android:textColor="#4a4a4a"
                android:textColorHint="#4a4a4a"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/otherFeedback"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:hint="Other Feedback"
                android:inputType="textMultiLine|textShortMessage"
                android:textColor="#4a4a4a"
                android:textColorHint="#4a4a4a"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/submitStudentFeedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:background="#f17e01"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>

</FrameLayout>
