<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.lenovopc.jagrati.SubjectTeachingDepartment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_teachingdepartment_backbutton" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="English"
                android:textColor="#4a4a4a"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <!--TODO: Loop Here-->
                <!--TODO: Add Profile Picture-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:paddingLeft="68.4dp"
                        android:paddingTop="13.7dp"
                        android:text="Garima Mishra"
                        android:textAllCaps="false"
                        android:textColor="#343434"
                        android:textSize="16.2dp" />

                    <TextView
                        android:id="@+id/discipline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="68.4dp"
                        android:layout_marginTop="39.3dp"
                        android:text="Design Discipline"
                        android:textColor="#858585"
                        android:textSize="13dp" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</FrameLayout>
