<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovopc.jagrati">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme">
            <intent-filter>
                <action android:name="com.example.lenovopc.jagrati.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Log in">
            <intent-filter>
                <action android:name="com.example.lenovopc.jagrati.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogoutActivity"
            android:label="Log out">
            <intent-filter>
                <action android:name="com.example.lenovopc.jagrati.LOGOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeachingDepartment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Teaching Department"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".SubjectTeachingDepartment"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Subject Teaching Department"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".StudentFeedback"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_student_feedback"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".History"
            android:label="@string/title_activity_history"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NotificationTimeline"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_notification_timeline"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".AddEvent"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_add_event"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Events"
            android:label="@string/title_activity_events"
            android:theme="@style/AppTheme" />
        <activity android:name=".EventDetails" />
        <activity android:name=".ClassFeedback" />
        <activity android:name=".Attendance"></activity>
    </application>

</manifest>